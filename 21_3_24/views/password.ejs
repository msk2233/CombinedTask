<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
         body {
        background-image: url(/pexels-fwstudio-129731.jpg);
    }
    #pass {
        margin: auto;
        height: 500px;
        width: 500px;
        background-color: rgba(185, 134, 24, 0.473);
        border-radius: 60px;
        .a {
            border: 2px solid black;
            margin-left: 200px;
        }
        div {
            margin-bottom: 30px;
            margin-left: 30px;
            padding-top: 10px;
            display: flex;
            justify-content: space-between;
            input {
                margin-right: 200px;
            }
        }
        .login {
        position: fixed;
        bottom: 450px;
        left: 840px;
        font-size: larger;
        color: blue;
        text-decoration: underline;
        width: fit-content;
    }
    h2{
        padding-bottom: 30px;
        padding-top: 30px;
        text-align: center;
    }
    }
</style>
</head>

<body>
    <div class="div">
        <form id="pass">
            <h2>Create Password</h2>
            <div class="password">Enter Password: <input type="text" name="password" id="password"></div>
            <div class="repassword">Resubmit Password: <input type="text" name="repassword" id="repassword"></div>
            <a class="a" onclick="submitdata()">SUBMIT</a>
            <input type="text" style="visibility: hidden;" name="email" value="<%= email %>">
            <div id="suc"></div>
            <div class="login" id="login"><a href="login">LOGIN</a></div>
        </form>
    </div>
    <script>
        // document.body.style.backgroundImage = "url('pexels-fwstudio-129731.jpg')"; 
        var email = '<%= email %> ';
        async function submitdata() {
            //FETCH URL AND POST THE DATA 

            var form = document.getElementById('pass');
            const formData = new URLSearchParams(new FormData(form));

            var url = "http://localhost:8080/create_password"
            var res1 = await fetch(url, {
                method: "POST",
                body: formData,
                headers: {
                    "Content-type": "application/x-www-form-urlencoded"
                }
            });

            var response = await res1.json();
            if (response.success == "yes") {
                document.getElementById('suc').innerHTML = 'you have been registered now you can login by clicking below link';
            }
            else{
                document.getElementById('suc').innerHTML = 'enter same password!!';
            }
        }
    </script>
</body>

</html>